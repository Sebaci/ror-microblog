<%= link_to 'New Post', new_post_path %><br />
<% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      Kategoria: <%= link_to post.category.name, category_path(post.category) %><br />
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br />
      <p><%= post.content %></p>
    </div>
<% end %>


