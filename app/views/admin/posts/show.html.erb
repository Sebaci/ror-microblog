<h2><%= @post.title %></h2>
<%= link_to @post.category.name, admin_category_path(@post.category) %><br />
<%= link_to 'Edit', edit_admin_post_path(@post) %> |
<%= link_to 'Destroy', admin_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %><br />


<p>
  <%= @post.content %>
</p>

<p id="notice"><%= notice %></p>

<%= render 'admin/comments/form' %>

<!--using range to make sure new empty comment is not displayed-->
<% @comments[0..-2].each do |comment| %>
    <%= "#{comment.nick} napisal:" %><br />
    <%= comment.content %><br />
    <%= link_to 'Delete', admin_post_comment_path(@post, comment), method: :delete, confirm: 'Are you sure?' %><br /><br />
<% end %>