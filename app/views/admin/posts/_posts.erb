<%= link_to 'New Post', new_admin_post_path %><br />
<% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, admin_post_path(post) %></h2>
      Kategoria: <%= link_to post.category.name, admin_category_path(post.category) %><br />
      <%= link_to 'Show', admin_post_path(post) %>
      <%= link_to 'Edit', edit_admin_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br />
      <p><%= post.content %></p>
    </div>
<% end %>